        <TabControl x:Name="processMethod" Height="100" Margin="0,431,0,0" VerticalAlignment="Top" Background="#FFEAEAEA" BorderBrush="#FFC9C9C9">
            <TabItem Header="Generic" Margin="0">
                <Grid>
                    <ComboBox
                             
