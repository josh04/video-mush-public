                        <Separator/>
                        <ComboBoxItem Content="Sand"/>
                        <ComboBoxItem Content="Remote Render Test"/>
                        <ComboBoxItem Content="Barcode"/>
                        <ComboBoxItem Content="360 Video Player"/>
                        <ComboBoxItem Content="Oculus 360 Player"/>
                        <ComboBoxItem Content="Oculus Direct Draw"/>
                        <ComboBoxItem Content="Fisheye to Equirectangular"/>
                        <ComboBoxItem Content="Sobel Filter"/>
                        <ComboBoxItem Content="Motion Reprojection Demo"/>
                        <ComboBoxItem Content="Motion Explorer"/>
                        <ComboBoxItem Content="Waveform"/>
                        <ComboBoxItem Content="Anaglyph"/>
                        <ComboBoxItem Content="Video Average"/>
                        <ComboBoxItem Content="MSE"/>
                        <ComboBoxItem Content="Side-by-side Pack"/>
                        <ComboBoxItem Content="Side-by-side Unpack"/>
                        <ComboBoxItem Content="Raster"/>
                        <ComboBoxItem Content="Motion Generator (Primary Image/Second View Depth + Camera Path and Model)"/>
                    </ComboBox>
                    <Label x:Name="label2" Content="Process:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="SLIC" Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="306*"/>
