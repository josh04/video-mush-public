                    </local:trackingComboBox>
                    <local:trackingComboBox x:Name="secondFolderPath" Margin="51,42,10,0" VerticalAlignment="Top" PropertyName="secondFolderPaths" isSave="False" wantsFolder="True" extension="">
                    </local:trackingComboBox>
                    <CheckBox  
                             
                             x:Name="loopCheck"
                             IsChecked="{Binding loopCheck, Mode=TwoWay, Source={x:Static mush:Settings.Default}}" 
                             Content="Loop" HorizontalAlignment="Left" Margin="51,64,0,0" VerticalAlignment="Top"/>
